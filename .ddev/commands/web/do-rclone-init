GREEN='\033[32m'
YELLOW='\033[33m'
BLUE='\033[34m'
MAGENTA='\033[35m'
CYAN='\033[36m'
RESET='\033[0m'

if [[ -z "${DIGITALOCEAN_SPACES_RCLONE_REMOTE_NAME}" ]]; then

  printf "ðŸ›‘ ${RED}The \"DIGITALOCEAN_SPACES_RCLONE_REMOTE_NAME\" environment variable must be set to run this command!${RESET}\n" >&2

  exit 1

fi

$DDEV_APPROOT/.ddev/commands/web/do-rclone-create-remote $DIGITALOCEAN_SPACES_RCLONE_REMOTE_NAME
